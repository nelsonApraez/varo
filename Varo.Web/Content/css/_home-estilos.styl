/*********** Formulario *************/

form
    width 100%
    height 100%
    .v-formulario
        .form-group
            margin-top: 20px
            padding: 0px 15px

        label
            margin-top: 20px
            font-size: 14px
            font-weight: 300
            color: grisoscuro

        .form-control, select
            background-color: transparent 
            border none 
            border-bottom: 1px solid gray 
            border-radius: 0
        
        select
            border 1px solid gray

  .v-formcontentselec
    margin: 40px 0px 0px 0px

    .v-selector
      padding-bottom: 40px
      border-bottom: 1px solid grisclarito
    
    h6
      color: grisoscuro
      font-weight: 300
      display block
      margin: 15px 0px 15px 15px

    .form-group
      display inline-block
      vertical-align: top
      padding: 0px 15px
      width: 100%

      .form-control
        background-color: transparent
        border: none 
        border-bottom: 1px solid grisoscuro
        border-radius: 0
        box-shadow: unset

.v-formulariobotones
  margin: 80px 0px
  padding: 0px 15px
  
  .v-btn
    font-size: 18px
    text-align: center
    width 100%
    display block
    padding: 8px 20px 
    text-decoration: none
    

  .v-btn-principal
    background-color: verde 
    font-weight: 400
    color: white
    border-radius: 7px

    &:hover
      background-color: rgba(verde, 0.8)

