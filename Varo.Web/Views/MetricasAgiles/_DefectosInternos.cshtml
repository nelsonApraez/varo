@model Varo.Web.Models.MetricasViewModel

<div class="table-title">
    <div class="row">
        <div class="col m12 l12">
            <h2><strong>@Recursos.Lenguaje.DefectosInternos</strong></h2>
        </div>
    </div>
</div>
<div class="row ">
    <div class="col m2 l2">
        <label for="ReportadosDefectos">@Recursos.Lenguaje.Reportados</label>
        @Html.EditorFor(model => model.defectosInternosViewModel.ReportadosDefectos,
            new { htmlAttributes = new { @class = "form-control validarEnteros" } })
        @Html.ValidationMessageFor(model => model.defectosInternosViewModel.ReportadosDefectos, null,
            new { @class = "text-danger" })
    </div>
    <div class="col m2 l2">
        <label for="CerradosDefectos">@Recursos.Lenguaje.Cerrados</label>
        @Html.EditorFor(model => model.defectosInternosViewModel.CerradosDefectos,
            new { htmlAttributes = new { @class = "form-control validarEnteros" } })
        @Html.ValidationMessageFor(model => model.defectosInternosViewModel.CerradosDefectos, null,
            new { @class = "text-danger" })
    </div>
    <div class="col m2 l2">
        <label for="ActualesDefectos">@Recursos.Lenguaje.Actuales</label>
        @Html.EditorFor(model => model.defectosInternosViewModel.ActualesDefectos,
            new { htmlAttributes = new { @readonly = "readonly", @style = "color: #666" } })
    </div>
    <div class="col m2 l2">
        <label for="AbiertosDefectos">@Recursos.Lenguaje.Abiertos</label>
        @Html.EditorFor(model => model.defectosInternosViewModel.AbiertosDefectos,
            new { htmlAttributes = new { @class = "form-control validarEnteros" } })
        @Html.ValidationMessageFor(model => model.defectosInternosViewModel.AbiertosDefectos, null, 
            new { @class = "text-danger" })
    </div>
    <div class="col m4 l4">
        <label for="ObservacionesDefectos">@Recursos.Lenguaje.Observaciones</label>
        @Html.TextAreaFor(model => model.defectosInternosViewModel.ObservacionesDefectos,
            new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.defectosInternosViewModel.ObservacionesDefectos, null,
            new { @class = "text-danger" })
    </div>
</div>