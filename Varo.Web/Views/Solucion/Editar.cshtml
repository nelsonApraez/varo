@model Varo.Web.Models.SolucionesViewModel

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/menu.js"></script>
<script src="~/Scripts/ListadosDeshabilitados.js"></script>
<script src="~/Scripts/sweetalert2.all.js"></script>                    <!--Función mensajes solución-->

<link rel="stylesheet" href="~/Content/css/estiloMenu.css" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom-validator")
}

@{var vista = Model.Vista;}
@{var titulo = "";}

@switch (vista)
{
    case "_FormularioCreacionEdicion":
        titulo = Recursos.Lenguaje.EditarSolucion;
        break;
    case "_VistaPrevia":
        titulo = Recursos.Lenguaje.VistaPreviaSolucion;
        break;
    default:
        break;
}

<div class="ig-header">
    @if (vista == "_FormularioCreacionEdicion")
    {
        <div id="menu-container">
            <div id="menu-wrapper">
                <div id="hamburger-menu"><span></span><span></span><span></span></div>
                <!-- hamburger-menu -->
            </div>
            <ul class="menu-list accordion">
                <li id="nav1" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "Hitos",
                                               new { idSolucion = Model.Id,
                                                   gerente = Model.UsuarioRedGerente,
                                                   responsable = Model.UsuarioRedResponsable,
                                                   scrumMaster = Model.UsuarioRedScrumMaster })'>
                        <img src="~/Content/images/hito.png" width="30" height="30" alt="Admin">
                        <span>
                            @Recursos.Lenguaje.Hitos
                        </span>
                    </a>
                </li>
                <li id="nav2" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "PruebasFuncionales",
                                               new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/test.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.Pruebas</span>
                    </a>
                </li>
                <li id="nav5" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "CalificacionAuditoriaSolucion",
                                               new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/auditoria.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.Auditoria</span>
                    </a>
                </li>
                <li id="nav6" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "EstimacionHorasSolucion",
                                               new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/time.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.EstimacionHoras</span>
                    </a>
                </li>
                <li id="nav7" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "Ambientes",
                                               new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/enviroment.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.Ambientes</span>
                    </a>
                </li>
                <li id="nav8" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "MetricasAgiles",
                                               new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/metricasagiles.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.MetricasAgiles</span>
                    </a>
                </li>
                <li id="nav9" class="toggle accordion-toggle">
                    <a class="menu-link" href='@Url.Action("Consultar", "Equipos",
                                                       new { idSolucion = Model.Id })'>
                        <img src="~/Content/images/equipos.png" width="30" height="30" alt="Admin">
                        <span>@Recursos.Lenguaje.Equipos</span>
                    </a>
                </li>
            </ul>
        </div>
    }
    <h2 class="v-titulo">@titulo</h2>
    <div class="row">
        @using (Html.BeginForm("Editar", "Solucion", FormMethod.Post,
            new { @id = "formularioCrearSolucion", @class = "formularioCrearEditar" }))
        {
            @Html.Partial(vista);
        }
    </div>
</div>