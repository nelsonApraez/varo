@model Varo.Web.Models.SolucionesViewModel

<script type="text/template" id="htmlAccionesDespliegueContinuo">
    <td>
        <a class="edit" 
           title="@Recursos.Lenguaje.Editar"
           data-toggle="tooltip" 
           id="btnEditar" 
           onclick="cargarFilaEditarDespliegues(this)">
            <em class="material-icons" aria-hidden="true">&#xE3C9;</em>
        </a>
        <a class="delete" 
           title="@Recursos.Lenguaje.Eliminar"
           data-toggle="tooltip" 
           id="btnEliminar" 
           onclick="EliminarFila(this, '#tablaDesplieguesContinuos')">
            <em class="material-icons" aria-hidden="true">&#xE872;</em>
        </a>
    </td>
</script>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col m12 l12">
                <h2><strong>@Recursos.Lenguaje.DesplieguesContinuos</strong></h2>
            </div>

        </div>
    </div>
    <table class="table table-bordered" id="tablaDesplieguesContinuos">
        <caption hidden>@Recursos.Lenguaje.DesplieguesContinuos</caption>
        <thead>
            <tr>
                <th id="" hidden>Id</th>
                <th id="">@Recursos.Lenguaje.NombreDespliegue</th>
                <th id="">@Recursos.Lenguaje.UrlDespliegue</th>
                <th id="">@Recursos.Lenguaje.Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.DesplieguesContinuos.ListaDeplieguesContinuos.Count > 0)
            {
                foreach (var itemDespliegueContinuo in Model.DesplieguesContinuos.ListaDeplieguesContinuos)
                {
                    <tr>
                        <td hidden>
                            @itemDespliegueContinuo.Id
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="@itemDespliegueContinuo.Nombre"></label>
                                @Html.TextBox("itemNombreDespliegue", itemDespliegueContinuo.Nombre,
                                     new { @class = "form-control", @readonly = true } )
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="@itemDespliegueContinuo.UrlDespliegue"></label>
                                @Html.TextBox("itemUrlDespliegue", itemDespliegueContinuo.UrlDespliegue,
                                     new { @class = "form-control", @readonly = true })
                            </div>
                        </td>
                        <td>
                            <a class="edit" title=@Recursos.Lenguaje.Editar data-toggle="tooltip"
                               id="btnEditar" onclick="cargarFilaEditarDespliegues(this)">
                                <em class="material-icons" aria-hidden="true">&#xE3C9;</em>
                            </a>
                            <a class="delete" title=@Recursos.Lenguaje.Eliminar data-toggle="tooltip"
                               id="btnEliminar" onclick="EliminarFila(this,'#tablaDesplieguesContinuos')">
                                <em class="material-icons" aria-hidden="true">&#xE872;</em>
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
    <div class="row">
        <div class="right">
            <button type="button"
                    class="btn add-new"
                    id="btnAdicionarDespliegueContinuo"
                    onclick="clearTextBox('#ModalDespliegueContinuo');"
                    data-toggle="modal"
                    data-target="#ModalDespliegueContinuo">
                @Recursos.Lenguaje.Adicionar
            </button>
        </div>
    </div>
</div>

<div class="modal fade" 
     id="ModalDespliegueContinuo" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="myModalLabel" 
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="text-align:left">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@Recursos.Lenguaje.DesplieguesContinuos</h4>
                <input id="fila" hidden>
            </div>
            <div class="modal-body" style="display:block">
                <div class="form-group">
                    <label for="NombreDespliegue">@Recursos.Lenguaje.NombreDespliegue</label>
                    <input type="text" class="form-control requerido" id="NombreDespliegue" />
                </div>
                <div class="form-group">
                    <label for="UrlDespliegue">@Recursos.Lenguaje.UrlDespliegue</label>
                    <input type="url" class="form-control" id="UrlDespliegue" />
                </div>
                <div id="msgError">
                    <span id="Error" class="error" hidden>@Recursos.Lenguaje.CampoRequerido</span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="v-formulariobotones">
                    <div class="row">
                        <div class="col m6 l6">
                            <a class="v-btn-segundario v-btn" data-dismiss="modal" aria-label="Close">
                                @Recursos.Lenguaje.Cancelar
                            </a>
                        </div>
                        <div class="col m6 l6">
                            <button class="v-btn-principal v-btn" type="button" id="btnAdd"
                                    onclick="AgregarElementoDespliegue('#ModalDespliegueContinuo')">
                                @Recursos.Lenguaje.Aceptar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>