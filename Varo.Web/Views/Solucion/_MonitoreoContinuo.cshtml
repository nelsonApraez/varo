@model Varo.Web.Models.SolucionesViewModel

<script type="text/template" id="htmlAccionesMonitoreo">
    <td>
        <a class="edit" 
           title="@Recursos.Lenguaje.Editar"
           data-toggle="tooltip" 
           id="btnEditar" 
           onclick="cargarFilaEditarMonitoreos(this)">
            <em class="material-icons" aria-hidden="true">&#xE3C9;</em>
        </a>
        <a class="delete" 
           title="@Recursos.Lenguaje.Eliminar"
           data-toggle="tooltip" 
           id="btnEliminar" 
           onclick="EliminarFila(this,'#tablaMonitoreosContinuos')">
            <em class="material-icons" aria-hidden="true">&#xE872;</em>
        </a>
    </td>
</script>

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col m12 l12">
                <h2><strong>@Recursos.Lenguaje.MonitoreosContinuos</strong></h2>
            </div>

        </div>
    </div>
    <table class="table table-bordered" id="tablaMonitoreosContinuos">
        <caption hidden>@Recursos.Lenguaje.MonitoreoContinuo</caption>
        <thead>
            <tr>
                <th id="" hidden>Id</th>
                <th id="">@Recursos.Lenguaje.NombreMonitoreo</th>
                <th id="">@Recursos.Lenguaje.UrlMonitoreo</th>
                <th id="">@Recursos.Lenguaje.Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.MonitoreosContinuos.ListaMonitoreosContinuos.Count > 0 )
            {
                foreach (var itemMonitoreosContinuos in Model.MonitoreosContinuos.ListaMonitoreosContinuos)
                {
                    <tr>
                        <td hidden>
                            @itemMonitoreosContinuos.Id
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="@itemMonitoreosContinuos.Nombre"></label>
                                @Html.TextBox("itemNombreMonitoreo", itemMonitoreosContinuos.Nombre,
                                    new { @class = "form-control", @readonly = true } )
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label for="@itemMonitoreosContinuos.UrlMonitoreo"></label>
                                @Html.TextBox("itemUrlMonitoreo", itemMonitoreosContinuos.UrlMonitoreo,
                                   new { @class = "form-control", @readonly = true })
                            </div>
                        </td>
                        <td>
                            <a class="edit" title=@Recursos.Lenguaje.Editar data-toggle="tooltip"
                               id="btnEditar" onclick="cargarFilaEditarMonitoreos(this)">
                                <em class="material-icons" aria-hidden="true">&#xE3C9;</em>
                            </a>
                            <a class="delete" title=@Recursos.Lenguaje.Eliminar data-toggle="tooltip"
                               id="btnEliminar" onclick="EliminarFila(this,'#tablaMonitoreosContinuos')">
                                <em class="material-icons" aria-hidden="true">&#xE872;</em>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="row">
        <div class="right">
            <button type="button"
                    class="btn add-new"
                    id="btnAdicionarMonitoreosContinuos"
                    onclick="clearTextBox('#ModalMonitoreo');"
                    data-toggle="modal"
                    data-target="#ModalMonitoreo">
                @Recursos.Lenguaje.Adicionar
            </button>
        </div>
    </div>
</div>

<div class="modal fade" 
     id="ModalMonitoreo" 
     tabindex="-1" 
     role="dialog" 
     aria-labelledby="myModalLabel" 
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="text-align:left">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@Recursos.Lenguaje.MonitoreoContinuo</h4>
                <input id="fila" hidden>
            </div>
            <div class="modal-body" style="display:block">
                <div class="form-group">
                    <label for="NombreMonitoreo">@Recursos.Lenguaje.NombreMonitoreo</label>
                    <input type="text" class="form-control requerido" id="NombreMonitoreo" />
                </div>
                <div class="form-group">
                    <label for="UrlMonitoreo">@Recursos.Lenguaje.UrlMonitoreo</label>
                    <input type="url" class="form-control" id="UrlMonitoreo" />
                </div>
                <div id="msgError">
                    <span id="Error" class="error" hidden>@Recursos.Lenguaje.CampoRequerido</span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="v-formulariobotones">
                    <div class="row">
                        <div class="col m6 l6">
                            <a class="v-btn-segundario v-btn" data-dismiss="modal" aria-label="Close">
                                @Recursos.Lenguaje.Cancelar
                            </a>
                        </div>
                        <div class="col m6 l6">
                            <button class="v-btn-principal v-btn" type="button" id="btnAdd"
                                    onclick="AgregarElementoMonitoreo('#ModalMonitoreo')">
                                @Recursos.Lenguaje.Aceptar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>