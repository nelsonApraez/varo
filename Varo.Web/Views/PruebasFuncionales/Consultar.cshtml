@model Varo.Web.Models.PruebasFuncionalesViewModel

<script src="~/Scripts/PruebasFuncionales.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/Content/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/css/switcher.css" />             <!--Apariencia switch-->

@{
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(false);
}

<div class="ig-header">
    <h3 class="v-titulo">@Recursos.Lenguaje.PruebasInterfazDeUsuario</h3>
    @using (Html.BeginForm("Actualizar", "PruebasFuncionales", FormMethod.Post,
        new
        {
            @id = "formularioCrearPruebasFuncionales",
            @class = "formularioCrearPruebasFuncionales",
            @name = "formularioCrearPruebasFuncionales"
        }))
    {
        <div class="v-formulario">
            <div class="v-selector">
                <div class="table-wrapper">
                    <div class="row">
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="CasosDefinidos">@Recursos.Lenguaje.CasosDefinidos</label>
                                @Html.EditorFor(model => model.CasosDefinidos,
                                    new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CasosDefinidos, null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="CasosaAutomatizar">@Recursos.Lenguaje.CasosaAutomatizar</label>
                                @Html.EditorFor(model => model.CasosaAutomatizar,
                                    new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CasosaAutomatizar, null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="CasosAutomatizados">@Recursos.Lenguaje.CasosAutomatizados</label>
                                @Html.EditorFor(model => model.CasosAutomatizados,
                                    new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CasosAutomatizados, null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="UrlDiseñodeCasos">@Recursos.Lenguaje.UrlDiseñodeCasos</label>
                                @Html.EditorFor(model => model.UrlDiseñodeCasos,
                                    new { htmlAttributes = new {
                                       @class = "form-control",
                                       @Title = Recursos.Lenguaje.UrlEjemplo + 
                                            " https://dev.azure.com/Company/Varo" } })
                            </div>
                        </div>

                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="UrlEvidencias">@Recursos.Lenguaje.UrlEvidencias</label>
                                @Html.EditorFor(model => model.UrlEvidencias,
                                    new { htmlAttributes = new {
                                        @class = "form-control",
                                        @Title = Recursos.Lenguaje.UrlEjemplo + 
                                            " https://dev.azure.com/Company/Varo" } })
                            </div>
                        </div>
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="UrlRepositorio">@Recursos.Lenguaje.UrlRepositorio</label>
                                @Html.EditorFor(model => model.UrlRepositorio,
                                    new { htmlAttributes = new {
                                       @class = "form-control",
                                       @Title = Recursos.Lenguaje.UrlEjemplo + 
                                            " https://dev.azure.com/Company/Varo" } })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="usuarioRedTecnico">@Recursos.Lenguaje.UsuarioDeRedDelAnalista</label>
                                <span class="c-tooltip"
                                      style="color:darkgray"
                                      data-tooltip="@Recursos.Lenguaje.MensajeInformativoUsuarios">
                                    <em class="fa fa-info-circle" style="color:darkgray"></em>
                                </span>
                                @Html.EditorFor(model => model.UsuarioRedTecnico,
                                    new { htmlAttributes = new {
                                        @class = "form-control col m11 l11",
                                        @id = "usuarioRedTecnico",
                                        @name = "usuarioRedTecnico" } })
                                @Html.ValidationMessageFor(model => model.UsuarioRedTecnico, null,
                                    new { @class = "text-danger" })
                                <button type="button" class="col m1 l1 btn-buscar"
                                        id="UsuarioDeRedDelAnalista"
                                        aria-label="UsuarioDeRedDelAnalista"
                                        onclick="ObtenerNombrePorUsuarioRed()"
                                        onkeypress="ObtenerNombrePorUsuarioRed()">
                                    <em class="material-icons" aria-hidden="true">search</em>
                                </button>
                            </div>
                        </div>
                        <div class="col m4 l4">
                            <div class="form-group">
                                <label for="nombreTecnico">@Recursos.Lenguaje.Analista</label>
                                @Html.EditorFor(model => model.NombreTecnico,
                                    new { htmlAttributes = new {
                                        @id = "nombreTecnico",
                                        @name = "nombreTecnico",
                                        @style = "color: #666",
                                        @readonly = "readonly",
                                        @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NombreTecnico, null,
                                    new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col m4 l4">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col m6 l6">
                                        <label for="FechaCreacion">@Recursos.Lenguaje.Fecha</label>
                                        @Html.TextBoxFor(model => model.FechaCreacion, "{0:MM/dd/yyyy}",
                                            new {
                                                @class = "form-control",
                                                @type = "date",
                                                @Value = Model.FechaCreacion.ToString("yyyy-MM-dd") })
                                        @Html.ValidationMessageFor(model => model.FechaCreacion, null,
                                            new { @class = "text-danger" })
                                    </div>
                                    <div class="col m6 l6">
                                        <label for="EstaenPipeline">@Recursos.Lenguaje.EstaEnPipelineDeCD</label>
                                        <div class="form-switcher form-switcher-lg form-switcher-sm-phone">
                                            <input type="checkbox"
                                                   name="checkEstaenPipeline"
                                                   value="true"
                                                   id="checkEstaenPipeline" @Model.EstaenPipeline />
                                            <label class="switcher" for="checkEstaenPipeline"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m12 l12">
                            <div class="form-group">
                                <label for="Observaciones">@Recursos.Lenguaje.Observaciones</label>
                                @Html.EditorFor(model => model.Observaciones,
                                    new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Observaciones, null,
                                    new { @class = "text-danger" })
                            </div>
                            <div hidden>@Html.EditorFor(model => model.Id)</div>
                            <div hidden>@Html.EditorFor(model => model.IdSolucion)</div>
                        </div>
                    </div>
                </div>
                <div class="right">
                    <div class="v-formulariobotones">
                        <div class="row">
                            <div class="col m6 l6">
                                <a class="v-btn-segundario v-btn"
                                   data-dismiss="modal"
                                   aria-label="Close"
                                   href="@Url.Action("Editar", "Solucion",
                                    new { id = Model.IdSolucion, vista = "_FormularioCreacionEdicion" })">
                                    @Recursos.Lenguaje.Cancelar
                                </a>
                            </div>
                            <div class="col m6 l6">
                                <button class="v-btn-principal v-btn" type="submit">
                                    @Recursos.Lenguaje.Aceptar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom-validator")
}
